        <script>
        
            function pares (x, y) {
                    for (var i = x; i <= y; i++) {
                        if (i % 2 === 0) {
                            console.log(i);
                        }
                    }
                };
                pares(1, 20);


                function impar(x,y){
                    for (var a = 0; a<=y; a++){
                        if(a%2==1){
                            console.log(a)
                        }
                    }
                    };
            
                impar (1,20);
        </script>
    </body>
